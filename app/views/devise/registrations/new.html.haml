.account-page__inner.clearfix
  %h2 新規アカウント作成

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, placeholder: 'おなまえを入力（必須）',class:"input", required: "true"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'emailを入力（必須）',class:"input", required: "true"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} 文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: 'パスワードを入力（必須）',class:"input", required: "true"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワードを入力（確認）',class:"input", required: "true"
    .field
      = f.label :avatar
      %br/
      = f.file_field :avatar,class:"avatar", required: "true"
    .actions
      = f.submit "Create User" ,class:"createuser"
      = render "devise/shared/links",class:"registrations"
