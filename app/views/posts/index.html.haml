.content
  .left
    .title.person
      = current_user.name
      の支出
    .posts
      - @my_posts.each do |post|
        .post
          .post__top 
            .post__top--list.edit= link_to "編集", "/posts/#{post.id}/edit", method: :get, class:".btn"
            .post__top--list.delete= link_to "削除", "/posts/#{post.id}", method: :delete, value:post.id ,class:".btn",data:{confirm:"本当に削除しますか？"}

          .post__element.icon
            %i.material-icons.large-size
              =post.category
          .post__element.amount¥
          .post__element.pay
            = post.price.to_s(:delimited)
          .post__element.face
            %i.material-icons.large-size
              =post.mental
          .post__element.date= post.created_at.strftime("%F")

  .center
    .title.all みんなの支出
    .posts
      - @other_posts.each do |post|
        .post
          .post__top--other
            = post.user&.name
            .small-size= post.likes.count
            - if current_user.already_liked?(post)
              = button_to "/posts/#{post.id}/likes/id", method: :delete , class: "good-btn" do
                %a.material-icons.small-size favorite
            - else
              = button_to "/posts/#{post.id}/likes", method: :post ,class: "good-btn" do
                %a.material-icons.small-size favorite

          .post__element.icon
            %i.material-icons.large-size=post.category
          .post__element.amount¥
          .post__element.pay= post.price.to_s(:delimited)
          .post__element.face
            %i.material-icons.large-size=post.mental
          .post__element.date= post.created_at.strftime("%F")

  .right__content
    .title.all みんなの気持ち
    .posts
      .emotion
        %p 満足
        %i.material-icons.large-size.blue.emotion sentiment_very_satisfied
        .int= number_to_percentage(@good, precision: 1) 
        %br
      .emotion
        %p 必要
        %i.material-icons.large-size.green.emotion sentiment_neutral
        .int= number_to_percentage(@normal, precision: 1) 
        %br
      .emotion
        %p 後悔
        %i.material-icons.large-size.red.emotion sentiment_very_dissatisfied  
        .int= number_to_percentage(@bad, precision: 1) 
      .title.memo
        みんなのメモ
        .material-icons chat
      .each-memo
        - @posts.each do |post|
          .each-memo__content= post.memo

  .footer
    .notifications
      - flash.each do |key, value|
        = content_tag(:div, value, class: key)
