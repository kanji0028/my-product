.content
  .left
    .title.person
      = current_user.name
      の支出
    .posts
      - @posts.each do |post|
        -# - if user_signed_in? && current_user.id == post.user_id
        .post
          .post__top 
            .post__top--list.edit= link_to "編集", "/posts/#{post.id}/edit", method: :get, class:".btn"
            .post__top--list.delete= link_to "削除", "/posts/#{post.id}", method: :delete, class:".btn"
          .post__element.icon
            %i.material-icons.large-size
              =post.category
          .post__element.amount¥
          .post__element.pay
            = post.price.to_s(:delimited)
          .post__element.face
            %i.material-icons.large-size
              =post.mental
          .post__element.date= post.created_at.strftime("%F")

  .center
    .title.all みんなの支出
    .posts
      - @other_posts.each do |post|
        .post
          .post__top= post.user.name
          .post__element.icon
            %i.material-icons.large-size
              =post.category
          .post__element.amount¥
          .post__element.pay
            = post.price.to_s(:delimited)
          .post__element.face
            %i.material-icons.large-size
              =post.mental
          .post__element.date= post.created_at.strftime("%F")

  .right
    .title.detail 詳細
    .posts
      .this-month
        今月の出費
        .this-month__yen
          ¥
          .this-month__costs=@sum.to_s(:delimited)
      .line